<div class="relative" {{on-click-outside this.hideMenu}}>
  <div class="flex items-center justify-center">
    <button type="button" {{on "click" this.toggleMenuVisibility}} class="no-focus">
      <img class="h-9 w-9 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="abeid ahmed">
    </button>
  </div>
  <ul class="{{if this.isActive 'block' 'hidden'}} py-1 mt-3 absolute text-sm origin-top-right right-0 bg-white border rounded-lg shadow-lg w-64">
    <li>
      <a href="#" class="block py-2 px-3 hover:bg-gray-100">
        <div class="flex items-center space-x-3">
          <img class="h-10 w-10 rounded-full flex-shrink-0" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="abeid ahmed">
          <div class="flex-1">
            <span class="block font-medium">Abeid Ahmed</span>
            <span class="block text-gray-500">@abeidahmed</span>
          </div>
        </div>
        <div class="flex items-center mt-3">
          {{svg-jar "user" class="text-gray-400 h-5 w-5"}}
          <span class="leading-5 pl-2 text-gray-700">Profile</span>
        </div>
      </a>
    </li>
    <li><hr class="my-1 border-gray-200" /></li>
    <li>
      <a href="#" class="flex items-center py-2 px-3 hover:bg-gray-100">
        {{svg-jar "setting" class="text-gray-400 h-5 w-5"}}
        <span class="leading-5 pl-2 text-gray-700">Setting</span>
      </a>
    </li>
    <li><hr class="my-1 border-gray-200" /></li>
    <li>
      <a href="#" class="flex items-center py-2 px-3 hover:bg-gray-100">
        {{svg-jar "logout" class="text-gray-400 h-5 w-5"}}
        <span class="leading-5 pl-2 text-gray-700">Sign out</span>
      </a>
    </li>
  </ul>
</div>
