<div class="max-w-7xl mx-auto flex">
  <div class="fixed inset-0 z-30 bg-gray-600 bg-opacity-50 sm:hidden"></div>
  <aside class="w-72 sm:w-auto sm:py-4 lg:w-72 fixed sm:sticky sm:top-0 bg-white z-40 border-r h-screen">
    <header class="flex items-center justify-between px-4 border-b sm:border-0 py-4 sm:py-0">
      <button type="button" class="no-focus hidden sm:block lg:hidden">
        <img class="h-9 w-9 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="abeid ahmed">
      </button>
      <LinkTo @route="index" class="inline-block text-gray-700 hover:text-gray-900 sm:hidden lg:block">
        {{svg-jar "logo" class="h-5 w-auto"}}
      </LinkTo>
      <button type="button" class="no-focus text-gray-700 sm:hidden">{{svg-jar "x"}}</button>
    </header>
    <nav class="mt-3 md:mt-5 sm:flex flex-col items-center lg:block lg:pr-6 px-4">
      <LinkTo @route="index" class="py-3 flex items-center text-gray-700 hover:text-rose-500">
        {{svg-jar "home"}}
        <span class="ml-2 leading-5 font-medium sm:hidden lg:block">Home</span>
      </LinkTo>
      <a href="#" class="py-3 flex items-center text-gray-700 hover:text-rose-500">
        {{svg-jar "hashtag"}}
        <span class="ml-2 leading-5 font-medium sm:hidden lg:block">Explore</span>
      </a>
      <a href="#" class="py-3 flex items-center text-gray-700 hover:text-rose-500">
        {{svg-jar "bookmark"}}
        <span class="ml-2 leading-5 font-medium sm:hidden lg:block">Bookmark</span>
      </a>
    </nav>
  </aside>
  <main class="md:grid grid-cols-12 flex-1 min-h-screen">
    <div class="col-span-7 border-r">
      <div class="p-4 border-b sticky top-0 z-10 bg-white">
        <div class="relative">
          <label for="search-global" class="sr-only">Search</label>
          <input type="text" id="search-global" placeholder="Search snapshot" class="block w-full border-gray-200 rounded-lg leading-5 pl-10 bg-gray-100 focus:bg-white focus:ring-2 focus:ring-opacity-50 focus:ring-rose-500 focus:border-rose-500">
          <div class="absolute inset-0 left-0 flex items-center pointer-events-none pl-3">
            {{svg-jar "search" class="text-gray-400 w-5 h-5"}}
          </div>
        </div>
      </div>
      <section class="space-y-3 bg-gray-100">
        <Snapshot />
        <Snapshot />
      </section>
    </div>
    <div class="py-4 col-span-5 pl-6 pr-4 hidden lg:block">
      <div class="flex items-center justify-end space-x-5">
        <button type="button" class="no-focus block px-3 py-2 text-sm font-medium leading-5 text-white whitespace-nowrap bg-rose-500 border border-transparent rounded-lg hover:bg-rose-400">
          Share snapshot
        </button>
        <button type="button" class="no-focus">
          <img class="h-9 w-9 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="abeid ahmed">
        </button>
      </div>
    </div>
  </main>
</div>
<ModalDialog @translucentOverlay={{true}}>
  hello world
</ModalDialog>
